<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">

            <gradient
                android:startColor="#58C8AE"
                android:centerColor="#60D1A0"
                android:endColor="#65D798"
                android:angle="0"/>

        </shape>
    </item>

    <item android:state_pressed="true">
        <ripple android:color="@color/transparent_white">
            <item>
                <shape android:shape="oval">

                    <gradient
                        android:startColor="#58C8AE"
                        android:centerColor="#60D1A0"
                        android:endColor="#65D798"
                        android:angle="0"/>

                </shape>
            </item>
        </ripple>
    </item>
</selector>
